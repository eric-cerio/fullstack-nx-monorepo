{
  "name": "@my-org/monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "dev:admin": "turbo dev --filter=@my-org/admin",
    "dev:api": "turbo dev --filter=@my-org/api",
    "affected:test": "turbo test --filter=...[HEAD~1]",
    "affected:build": "turbo build --filter=...[HEAD~1]",
    "affected:lint": "turbo lint --filter=...[HEAD~1]",
    "clean": "turbo daemon clean && rm -rf .turbo"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "eslint": "^9.0.0",
    "eslint-plugin-boundaries": "^4.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.7.0"
  }
}
